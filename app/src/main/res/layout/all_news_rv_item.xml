<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/brown_100"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/all_news_rv_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/all_news_rv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown_dark_900"
                android:textSize="20sp"
                tools:text="Some title" />

            <LinearLayout
                android:id="@+id/all_news_rv_item_author_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/all_news_rv_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:textAlignment="textStart"
                    android:textColor="@color/brown_900"
                    android:textSize="16sp"
                    tools:text="Some author" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/all_news_rv_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:textAlignment="textEnd"
                    android:textColor="@color/brown_900"
                    android:textSize="16sp"
                    tools:text="01.01.2022 10:33" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/all_news_rv_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:adjustViewBounds="true"
                tools:src="@drawable/habr" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/all_news_rv_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:textColor="@color/brown_dark_900"
                android:textSize="18sp"
                tools:text="Some description" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>